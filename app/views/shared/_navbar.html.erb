<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	
  <div class="container">        
    <ul class="nav navbar-nav">
      <li <%= "class=active" if current_page?(root_url) %>>
        <a href="/">Home</a>
      </li>
    </ul>
    
    <ul class="nav navbar-nav navbar-right">
		<% if signed_in? %>
			<div class="navbar-brand">
		   		<%= "logged in as #{current_user.username}" if signed_in? %>
	   		</div>
			<li>
			<form action="<%= session_url %>" class="navbar-form navbar-left" method="post">
				<%= auth_token %>
				<%= hidden_method("delete") %>
    			<button type="submit" class="btn btn-default">Sign Out</button>
			</form>
			</li>
		<% else %>
			<li>
			<div class="navbar-form navbar-left">
    			<a href="<%= new_session_url %>" class="btn btn-default">Sign In</a>
			</div>
			</li>
		<% end %>
    </ul>
  </div>
</div>